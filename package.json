{
  "name": "build-script-demo",
  "version": "1.0.0",
  "description": "A project to demonstrate how to use build script",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/index.jsx --bundle --outfile=dist/main.js",
    "test": "jest",
    "prepare": "npm run build && npm run test",
    "predeploy": "npm run prepare",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [],
  "author": "Juntao Qiu",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "babel-jest": "^29.5.0",
    "gh-pages": "^5.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react-test-renderer": "^18.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "dependencies": {
    "esbuild": "0.18.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
